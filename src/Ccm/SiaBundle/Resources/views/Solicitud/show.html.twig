{% extends 'CcmSiaBundle::layout.html.twig' %}


{% block wrapper %}


<div class="row">

    <div class="col-lg-12">
        <h1 class="page-header">Solicitud</h1>
    </div>

</div>

<div class="col-lg-7">
<ol class="breadcrumb">
    <li><a href="{{ path('sia') }}">Solicitudes</a></li>
    <li class="active">{{ entity.id }}</li>
</ol>
</div>



<div class="row">
    <div class="col-lg-7">
        <div class="panel panel-info">
            <div class="panel-heading">
                {{ entity.tipo | capitalize}}
            </div>
            <div class="panel-body">
                <p>Inicio de la solicitud: {{ entity.inicio |date ('y-m-d')}}</p>
                <p>Fin de la solicitud : {{ entity.inicio |date ('y-m-d')}}</p>
                <p>Proyecto: {{ entity.proyecto}}</p>
                <p>País: {{ entity.pais}}</p>
                <p>Ciudad: {{ entity.ciudad}}</p>
                <p>Universidad: {{ entity.universidad}}</p>
                <p>Profesor a quien visita: {{ entity.profesor}}</p>
                <p>Actividad a realizar: {{ entity.actividad}}</p>
                <p>Propósito: {{ entity.proposito}}</p>
                <p>Trabajo a presentar: {{ entity.trabajo}}</p>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <th>CCM</th>
                            <th>PAPIIT</th>
                            <th>Conacyt</th>
                            <th>Otro</th>
                        </tr>
                        </thead>
                        <tbody>
                {% set ccm = 0 %}
                {% set papiit = 0 %}
                {% set conacyt = 0 %}
                {% set otro = 0 %}

                {% for fin in entity.financiamiento %}
                        <tr>
                            <td>{{ fin.nombre }}</td>
                            <td>{{ fin.ccm  }}</td>
                            <td>{{ fin.papiit  }}</td>
                            <td>{{ fin.conacyt  }}</td>
                            <td>{{ fin.otro  }}</td>
                        </tr>
                    {% set ccm = fin.ccm + ccm %}
                    {% set papiit = fin.papiit + papiit %}
                    {% set conacyt = fin.conacyt + conacyt %}
                    {% set otro = fin.otro + otro %}

                {% endfor %}
                        <tr>
                            <td>Total</td>
                            <td>{{ ccm }}</td>
                            <td>{{ papiit }}</td>
                            <td>{{ conacyt }}</td>
                            <td>{{ otro }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <p>Enviada: {{ entity.enviada}}</p>
                <p>Aprobada: {{ entity.aprobada}}</p>
                <p>Created: {{ entity.created|date('y-m-d')}}</p>
                <p>Modified: {{ entity.modified|date('y-m-d')}}</p>






            <div class="panel-footer">

                <a href="{{ path('solicitud_edit', { 'id': entity.id }) }}"><button type="button" class="btn btn-outline btn-primary btn-lg">Edit</button></a>

                {{ form_widget(delete_form) }}





            </div>
        </div>
    </div>






{% endblock %}
