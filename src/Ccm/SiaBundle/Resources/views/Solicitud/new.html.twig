                        {{ form_widget(form.tipo, {'attr': {'class': 'form-control input-sm'} } ) }}
                    </div>
                    <div>{{ form_errors(form.tipo) }}</div>
                </div>
            </div>
{#            <div class="col-lg-4">
                <div class="form-group">
