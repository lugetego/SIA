    {% if form.trabajo is defined %}
        <div class="row">
            <div class="col-lg-8">
                <div class="col-lg-8">
                    <div class="form-group">
                        <div>
                            {{ form_label(form.trabajo) }}
                        </div>
                        <div>
                            {{ form_widget(form.trabajo, {'attr': {'class': 'form-control input-sm'} } ) }}
                        </div>
                        <div>{{ form_errors(form.trabajo) }}</div>
                    </div>
                </div>
