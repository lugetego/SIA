                    {{ form_widget(form.cartaInvitacionFile) }}
                </div>
                <div class="form-group">
                    <div class="text-danger">{{ form_errors(form.planTrabajoFile) }}</div>
                    {{ form_widget(form.planTrabajoFile) }}
