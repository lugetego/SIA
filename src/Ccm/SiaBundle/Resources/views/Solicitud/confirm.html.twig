{% extends 'CcmSiaBundle::layout.html.twig' %}

{% block wrapper %}
    <h1>Solicitud confirmacion</h1>

    {% for mensaje in app.session.flashbag.get('info') %}
        <p class="info">{{ mensaje }}</p>
    {% endfor %}


    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.tipo }}</td>
        </tr>
        <tr>
            <th>Pais</th>
            <td>{{ entity.pais }}</td>
        </tr>
        <tr>
            <th>Ciudad</th>
            <td>{{ entity.ciudad }}</td>
        </tr>
        <tr>
            <th>Universidad</th>
            <td>{{ entity.universidad }}</td>
        </tr>
        <tr>
            <th>Profesor</th>
            <td>{{ entity.profesor }}</td>
        </tr>
        <tr>
            <th>Actividad</th>
            <td>{{ entity.actividad }}</td>
        </tr>
        <tr>
            <th>Proposito</th>
            <td>{{ entity.proposito }}</td>
        </tr>
        <tr>
            <th>Proyecto</th>
            <td>{{ entity.proyecto }}</td>
        </tr>
        <tr>
            <th>Inicio</th>
            <td>{{ entity.inicio|date }}</td>
        </tr>
        <tr>
            <th>Fin</th>
            <td>{{ entity.fin|date }}</td>
        </tr>
        <tr>
            <th>Trabajo</th>
            <td>{{ entity.trabajo }}</td>
        </tr>
        <tr>
        <th>Financiamiento</th>
            <td>
        <ul>
            {# itera sobre cada etiqueta existente y reproduce su Ãºnico campo: name #}
            {% for fin in entity.financiamiento %}
                <li>{{ fin.nombre }}</li>
                {{ fin.ccm  }}
                {{ fin.papiit  }}
                {{ fin.conacyt  }}
                {{ fin.otro  }}


            {% endfor %}
        </ul>
            </td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('solicitud') }}">
                Back to the list
            </a>
        </li>
        {% if entity.enviada == null %}
        <li>
            <a href="{{ path('solicitud_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        {% endif %}

        <li>
            <a href="{{ path('solicitud_send', { 'id': entity.id }) }}">
                Enviar
            </a>
        </li>
    </ul>
{% endblock %}
