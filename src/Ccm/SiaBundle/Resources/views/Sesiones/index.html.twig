{% extends 'CcmSiaBundle::layout.html.twig' %}

{% block wrapper %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Sesiones</h1>
        </div>
    </div>

    <div>
        <p>
            <a href="{{ path('sesiones_new') }}"><button type="button" class="btn btn-primary"><i class="fa fa-plus"></i> Nueva Sesi√≥n de Consejo</button></a>
        </p>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="example">
            <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Nombre</th>
                <th>Acciones</th>

            </tr>
            </thead>
            <tbody>

            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('sesiones_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.fecha|date('d-m-Y') }}</td>
                    <td>{{ entity.name }}</td>
                    <td>
                        <a href="{{ path('sesiones_show', { 'id': entity.id }) }}"><i class="fa fa-search"></i>  </a>
                        <a href="{{ path('sesiones_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o"></i> </a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript" language="javascript" src="//cdn.datatables.net/1.10.3/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="//cdn.datatables.net/plug-ins/380cb78f450/integration/bootstrap/3/dataTables.bootstrap.js"></script>
    <script type="text/javascript" class="init">

        $(document).ready(function() {
            $('#example').dataTable( {
                "pagingType": "full_numbers",
                "language": {
                    url: '//cdn.datatables.net/plug-ins/380cb78f450/i18n/Spanish.json'
                }
            } );
        } );


    </script>
{% endblock %}



