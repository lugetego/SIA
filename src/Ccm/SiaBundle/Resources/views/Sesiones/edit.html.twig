{% extends 'CcmSiaBundle::layout.html.twig' %}

    {% form_theme edit_form 'CcmSiaBundle::form_errors.html.twig' %}


{% block wrapper %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Modificar Sesión</h1>
        </div>
    </div>

    {{ form_start(edit_form) }}

    <div class="row">
        <div class="col-lg-8">
            <div class="col-lg-8">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.fecha) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.fecha, {'attr': {'class': 'form-control', 'placeholder':'dd-mm-aaaa'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.fecha) }}</div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-8">
            <div class="col-lg-8">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.name) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.name, {'attr': {'class': 'form-control','placeholder': 'Nombre de la sesión'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.name) }}</div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-8">
            <div class="col-lg-12">
                {{ form_widget(edit_form.save,{'attr':{'class':'btn btn-primary'} } )}}

                <a href="{{ path('sesiones_show', { 'id': entity.id}) }}" type="button"  class="btn btn-danger">Cancelar</a>


            </div>
        </div>
    </div>

    {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}

{% endblock %}
