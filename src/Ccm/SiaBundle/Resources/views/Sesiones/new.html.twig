{% extends 'CcmSiaBundle::layout.html.twig' %}

{% form_theme form 'CcmSiaBundle::form_errors.html.twig' %}


{% block wrapper %}


    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Nueva Sesión</h1>
        </div>
    </div>



    {{ form_start(form) }}

    <div class="row">
        <div class="col-lg-8">
            <div class="col-lg-4">
                <div class="form-group">
                    <div>
                        {{ form_label(form.fecha) }}
                    </div>
                    <div>
                        {{ form_widget(form.fecha, {'attr': {'class': 'form-control input-sm', 'placeholder':'dd-mm-aaaa'} } ) }}
                    </div>
                    <div>{{ form_errors(form.fecha) }}</div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="form-group">
                    <div>
                        {{ form_label(form.name) }}
                    </div>
                    <div>
                        {{ form_widget(form.name, {'attr': {'class': 'form-control input-sm','placeholder': 'Nombre de la sesión'} } ) }}
                    </div>
                    <div>{{ form_errors(form.name) }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="col-lg-12">
                {{ form_widget(form.save,{'attr':{'class':'btn btn-primary'} } )}}

                <a href="{{ path('sesiones') }}" type="button"  class="btn btn-danger">Cancelar</a>
            </div>
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}


{% endblock %}
