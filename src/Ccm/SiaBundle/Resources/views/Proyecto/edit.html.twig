{% extends 'CcmSiaBundle::layout.html.twig' %}

    {% form_theme edit_form 'CcmSiaBundle::form_errors.html.twig' %}


{% block wrapper %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Modificar Proyecto</h1>
        </div>
    </div>

    {{ form_start(edit_form) }}

    <div class="row">
        <div class="col-lg-8">
            <div class="col-lg-8">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.nombre) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control','placeholder': 'Nombre del proyecto'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.nombre) }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="col-lg-8">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.numero) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.numero, {'attr': {'class': 'form-control','placeholder': 'NÃºmero del proyecto'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.numero) }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="col-lg-8">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.academico) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.academico, {'attr': {'class': 'form-control'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.academico) }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="col-lg-12">
                {{ form_widget(edit_form.save,{'attr':{'class':'btn btn-primary'} } )}}

                <a href="{{ path('proyecto_show', { 'id': entity.id}) }}" type="button"  class="btn btn-danger">Cancelar</a>


            </div>
        </div>
    </div>

    {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}


{% endblock %}
