{% extends 'CcmSiaBundle::layout.html.twig' %}

{% block wrapper %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Acad√©micos</h1>
        </div>
    </div>


    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="example">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Fecha de nacimiento</th>
                <th>RFC</th>
                <th>Acciones</th>

            </tr>
            </thead>
            <tbody>

            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('academico_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>

                    <td>{{ entity.nacimiento|date('Y-m-d') }}</td>
                    <td>{{ entity.rfc }}</td>
                    <td>
                        <a href="{{ path('academico_show', { 'id': entity.id }) }}"><i class="fa fa-search"></i>  </a>
                        <a href="{{ path('academico_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o"></i> </a>
                        <a href="{{ path('solicitud', {'_switch_user': entity.name }) }}">Crear solicitud</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
        <a href="{{ path('academico', {'_switch_user': '_exit'}) }}">Exit impersonation</a>
    {% endif %}

    {% endblock %}

{% block javascript %}
    <script type="text/javascript" language="javascript" src="//code.jquery.com/jquery-1.11.1.min.js"></script>

    <script type="text/javascript" language="javascript" src="//cdn.datatables.net/1.10.3/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="//cdn.datatables.net/plug-ins/380cb78f450/integration/bootstrap/3/dataTables.bootstrap.js"></script>
    <script type="text/javascript" class="init">

        $(document).ready(function() {
            $('#example').dataTable( {
                "pagingType": "full_numbers"
            } );
        } );

    </script>
{% endblock %}
