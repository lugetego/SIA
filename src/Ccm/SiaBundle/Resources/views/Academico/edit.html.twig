{% extends 'CcmSiaBundle::layout.html.twig' %}

    {% form_theme edit_form 'CcmSiaBundle::form_errors.html.twig' %}






    {% block wrapper %}


        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Modificar Acad√©mico</h1>
            </div>
        </div>


        {{ form_start(edit_form) }}

        <div class="row">
            <div class="col-lg-8">
                <div class="col-lg-8">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.name) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control','placeholder': 'Nombre(s) Apellido(s) Paterno Materno'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.name) }}</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.nacimiento) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.nacimiento, {'attr': {'class': 'form-control', 'placeholder':'dd-mm-aaaa'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.nacimiento) }}</div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.rfc) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.rfc, {'attr': {'class': 'form-control', 'placeholder':'10 caracteres'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.rfc) }}</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.dias) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.dias, {'attr': {'class': 'form-control'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.dias) }}</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">

                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.user) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.user, {'attr': {'class': 'form-control'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.user) }}</div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.proyectos) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.proyectos, {'attr': {'class': 'form-control'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.proyectos) }}</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="col-lg-12">
                    {{ form_widget(edit_form.save,{'attr':{'class':'btn btn-primary'} } )}}

                    <a href="{{ path('sia') }}" type="button"  class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        </div>

        {{ form_rest(edit_form) }}
        {{ form_end(edit_form) }}




    {% endblock %}



